  "fonts": [
    {
      "variable": "header_font",
      "label": "Header Font",
      "default": "Lexend Exa"
    },
    {
      "variable": "text_font",
      "label": "Text Font",
      "default": "Lexend Exa"
    }
  ],
  "colors": [
    {
      "variable": "background_color",
      "label": "Background",
      "default": "#F8F8F9"
    },
    {
      "variable": "text_color",
      "label": "Text",
      "default": "#000000"
    },
    {
      "variable": "welcome_text_color",
      "label": "Welcome Text",
      "default": "#FFFFFF"
    },
    {
      "variable": "button_background_color",
      "label": "Button background",
      "default": "#EEFF8A"
    },
    {
      "variable": "secondary_background_color",
      "label": "Secondary Background",
      "default": "#FFFFFF"
    },
        {
      "variable": "accent_background_color",
      "label": "Accent background",
      "default": "#FBFFE2"
    },
    {
      "variable": "pattern_color",
      "label": "Home welcome pattern",
      "default": "#000000"
    },
    {
      "variable": "left_gradient_color",
      "label": "Left gradient",
      "default": "#D1FBFF"
    },
    {
      "variable": "right_gradient_color",
